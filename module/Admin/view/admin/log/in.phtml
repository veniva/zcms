<?php $this->layout('admin/login');//change the default layout to the login layout

$form  = $this->form;
$form->prepare();
$uname = $form->get('uname');
$pass = $form->get('password');
$errors = $this->formElementErrors($uname);

?>
<div class="messages">
    <?php foreach (array('error', 'success', 'info', 'default') as $namespace):
        $flashMessages = $this->flashmessenger()->render($namespace);
        $namespace = $namespace == 'error' ? 'danger' : $namespace;/*adjust bootstrap to ZF2*/
        if (!empty($flashMessages)):?>
            <div class="alert alert-<?=$namespace?>" role="alert">
                <?= $flashMessages ?>
            </div>
        <?php endif;
    endforeach; ?>
    <?php if($errors):?>
        <div class="alert alert-danger" role="alert">
            <?=$errors?>
        </div>
    <?php endif;?>
</div>

<div class="login">
    <div class="login_font" style="margin-bottom:20px;"> <?=$this->translate('Administration Login')?></div>
    <?=$this->form()->openTag($form)?>
    <div class="uname"><?=$this->translate($uname->getLabel())?>:</div>
    <div class="uform">
        <?=$this->formInput($uname)?>
    </div>
    <div class="uname"><?=$this->translate($pass->getLabel())?>:</div>
    <div class="uform">
        <?=$this->formInput($pass)?>
    </div>
    <div class="uform">
        <input type="submit" name="submit" value="<?=$this->translate('Enter')?>" />
    </div>
    <?=$this->form()->closeTag()?>
    <div class="forgotten">
        <a href="<?=$this->langUrl('admin/default', ['controller' => 'log', 'action' => 'forgotten'])?>"><?=$this->translate('Password forgotten')?></a>
    </div>
</div>