        if (!empty($flashMessages)):?>
            <div class="alert alert-<?=$namespace?>" role="alert">
                <?= $flashMessages ?>
            </div>
        <?php endif;
    endforeach; ?>
</div>

<div class="login">
    <div class="login_font" style="margin-bottom:20px;"> <?=$this->translate('Reset password')?></div>
    <?=$this->form()->openTag($form)?>
    <div class="uname"><?=$this->translate($form->get('password_fields')->get('password')->getLabel())?>:</div>
    <div class="uform">
        <?=$this->formInput($form->get('password_fields')->get('password'))?>
        <div class="form-error">
            <?=$this->formElementErrors($this->form->get('password_fields')->get('password'));?>
        </div>
    </div>
    <div class="uname"><?=$this->translate($form->get('password_fields')->get('password_repeat')->getLabel())?>:</div>
