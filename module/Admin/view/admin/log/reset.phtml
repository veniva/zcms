        <?=$this->formInput($form->get('password_fields')->get('password_repeat'))?>
        <div class="form-error">
            <?=$this->formElementErrors($this->form->get('password_fields')->get('password_repeat'));?>
        </div>
    </div>
    <div class="uform">
        <input type="submit" name="submit" value="<?=$this->translate('Edit')?>" />
    </div>
    <?=$this->form()->closeTag()?>
    <div class="forgotten">
        <a href="<?=$this->langUrl('admin/default', ['controller' => 'log', 'action' => 'in'])?>"><?=$this->translate('Back to login')?></a>
